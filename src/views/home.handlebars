{{!-- Este es el considerado index.handlebars. Aqui se muestran todos los productos controlado con un
paginate y sort --}}
<div class="container">
    <h1>Lista de Productos</h1>
    <div class="col-md-8 md-8">
        <div class="product-list">
            {{#if products.length}}
                {{#each products}}
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="product-card">
                            <h2 class="card-title">{{title}}</h2>
                            <h5 class="card-subtitle mb-2">Categoría: {{category}}</h5>
                            <p class="card-text">Descripción: {{description}}</p>
                            <p class="card-text">Precio: ${{price}}</p>
                            <p class="card-text">Stock: {{stock}}</p>
                            <!-- Nuevo botón para agregar directamente al carrito -->
                            <button class="btn btn-primary add-to-cart" onclick="addToCart('{{_id}}')">
                                Agregar al carrito
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <h3>Aún no hay productos disponibles</h3>
            {{/if}}
        </div>
    </div>

    <!-- Controles de Paginación -->
    <nav aria-label="Paginación de productos">
        <ul class="pagination justify-content-center">
            {{#if hasPrevPage}}
            <li class="page-item">
                <a class="page-link" href="?page={{prevPage}}&limit={{limit}}" aria-label="Anterior">
                    <span aria-hidden="true">&laquo; Anterior</span>
                </a>
            </li>
            {{else}}
            <li class="page-item disabled">
                <span class="page-link">&laquo; Anterior</span>
            </li>
            {{/if}}

            {{#each pages}}
            <li class="page-item {{#if active}}active{{/if}}">
                <a class="page-link" href="?page={{number}}&limit={{../limit}}">
                    {{number}}
                </a>
            </li>
            {{/each}}

            {{#if hasNextPage}}
            <li class="page-item">
                <a class="page-link" href="?page={{nextPage}}&limit={{limit}}" aria-label="Siguiente">
                    <span aria-hidden="true">Siguiente &raquo;</span>
                </a>
            </li>
            {{else}}
            <li class="page-item disabled">
                <span class="page-link">Siguiente &raquo;</span>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>

<!-- SweetAlert y script -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/addToCart.js"></script>
